
<h1 class="display-4 p-2">Add Ship</h1>

<div class="row">
  <div class="col-4">
    <%= form_with(model: @ship, local: true) do |form| %>

      <%= render 'errors', object: @ship %>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, id: :ship_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :photo %>
        <%= form.text_field :photo, id: :ship_photo, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'btn btn-outline-primary' %>
      </div>
    <% end %>
  </div>
  <div class="col-8"></div>
</div>